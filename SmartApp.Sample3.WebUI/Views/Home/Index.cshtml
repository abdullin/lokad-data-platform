@{
    ViewBag.Title = "Home Page";
}
<script src="/Content/js/jquery-1.8.2.min.js"></script>
<script src="/Content/js/jquery.unobtrusive-ajax.min.js"></script>

<div class="container">
    <div class="row-fluid">
        <div class="span6">
            <div id="tag_result" ></div>
        </div>

        <div class="span6">
            <div id="comment_result" ></div>
        </div>
    </div>
</div>

@Ajax.ActionLink("Refresh tags", "Tags", "Home", null, new AjaxOptions { UpdateTargetId = "tag_result" }, new { style = "display:none;", id = "refreshTags" })
@Ajax.ActionLink("Refresh comments", "Comments", "Home", null, new AjaxOptions { UpdateTargetId = "comment_result" }, new { style = "display:none;", id = "refreshComment" })
<script>
    $(document).ready(function () {
        refresh("refreshTags");
        refresh("refreshComment");
        setInterval(function () { refresh("refreshTags"); }, 5000);
        setInterval(function () { refresh("refreshComment"); }, 5000);
    });

    function refresh(id) {
        $("#" + id).click();
    }
</script>
